@{
    ViewBag.Title = "Home Page";
}

<div id="my-carousel" class="carousel" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="@Url.Action("GetCarouselImage", new {imagePath = "Carousel/page1.png"})" style="width:1920px;height:500px;" />
            <div class="carousel-caption">
                <h3>Caption heading 1</h3>
            </div>
        </div>

        <div class="item">
            <img src="@Url.Action("GetCarouselImage", new {imagePath = "Carousel/page2.png"})" style="width: 1920px; height: 500px;" />
            <div class="carousel-caption">
                <h3>Caption heading 2</h3>
            </div>
        </div>

        <div class="item">
            <img src="@Url.Action("GetCarouselImage", new {imagePath = "Carousel/page3.png"})" style="width: 1920px; height: 500px;" />
            <div class="carousel-caption">
                <h3>Caption heading 3</h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container marketing">

    <!-- Three columns of text below the carousel -->
    <div class="row">
        <div class="col-lg-4">
            <img class="img-circle" data-src="@Url.Action("GetCarouselImage", new {id=1})" style="width:140px;height:140px;" />
